<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
  </head>
  <body>
    <%- include('nav'); -%>
    <div class="main-container">
        <h1>Add to the event list</h1>
        <form class="list-header" action="/list" method="post">
          <input class="eventInput" type="text" name="name" placeholder="name">
          <input class="eventInput" type="date" name="date" placeholder="date">
          <input class="eventInput" type="text" name="time" placeholder="time">
          <input class="eventInput" type="text" name="location" placeholder="location">
          <button type="submit" disabled style="display: none;" aria-hidden="true"></button>
          <button type="submit" name="button" class="submitButton">submit</button>
        </form>
        <div class="all-events">
          <% events.forEach(details => { %>
            <ul class="listEntry">
              <% if (details._id == eventId) { %>
              <form class="editForm" action="/list/edit/<%= details._id %>" method="POST">
              <li class="name"><input class="eventNameEdit" type="text" value="<%= details.name %>" name="name" placeholder="name"></li>
              <li class="date"><input class="eventDateEdit" type="date" value="<%= details.date %>" name="date" placeholder="date"></li>
              <li class="time"><input class="eventTimeEdit" type="text" value="<%= details.time %>" name="time" placeholder="time"></li>
              <li class="location"><input class="eventLocationEdit" type="text" value="<%= details.location %>" name="location" placeholder="location"></li>
              <div class="subCan">
                <button class="addEvent" type="submit">confirm</button><a href="/list" class="cancel">cancel</a>
              </div>
              </form>
              <% } else { %>
              <li class="name"><%= details.name %></li>
              <li class="date"><%= details.date %><br /></li>
              <li class="time"><%= details.time %><br /></li>
              <li class="location"><%= details.location %></li>
              <a href="/list/edit/<%= details._id %>" class="edit">edit /</a><a href="/list/remove/<%= details._id %>" class="remove"> remove</a>
              <% } %>
            </ul>
          <% }) %>
        </div>
    </div>
  </body>
</html>
